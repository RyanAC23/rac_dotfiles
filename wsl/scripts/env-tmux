#!/bin/bash

# [0] Home Screen
tmux new -s base -d
tmux rename-window -t base home

# [1] File Manager
tmux new-window -t base
tmux rename-window -t base ranger
tmux send-keys -t base 'ranger' C-m

# [2] RSS Feed
tmux new-window -t base
tmux rename-window -t base RSS
tmux send-keys -t base 'newsboat' C-m

# [3] Jupyter Server
tmux new-window -t base
tmux rename-window -t base Jupyter
tmux send-keys -t base 'cd /home/ryan/research/nuclear-hydrodynamics-fork' C-m
tmux send-keys -t base 'j' C-m

tmux select-window -t base:home
tmux attach -t base
